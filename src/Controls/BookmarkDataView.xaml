<UserControl
    x:Class="daVinci.Controls.BookmarkDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:LuiAttached="clr-namespace:leonardo.AttachedProperties;assembly=leonardo-wpf"
    xmlns:Luicontrols="clr-namespace:leonardo.Controls;assembly=leonardo-wpf"
    xmlns:bookmark="clr-namespace:daVinci_wpf.ConfigData.Bookmark"
    xmlns:controls="clr-namespace:daVinci.Controls"
    xmlns:converter="clr-namespace:leonardo.Converter;assembly=leonardo-wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
    xmlns:hub="clr-namespace:daVinci_wpf.ConfigData.Hub"
    xmlns:l="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="650"
    d:DesignWidth="1200"
    l:LocalizeDictionary.DesignCulture="de"
    l:ResxLocalizationProvider.DefaultAssembly="Qlik.Sense.Resources"
    l:ResxLocalizationProvider.DefaultDictionary="Translate_client"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/daVinci-wpf;component/Styles/daVinciStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <bookmark:BookmarkDataFilter x:Key="BookmarkDataFilter" />
            <ContextMenu
                x:Key="deleteMenu"
                Style="{StaticResource ContextmenuAccordion}">
                <MenuItem
                    Height="40"
                    BorderBrush="{StaticResource LUI.Brush.Grayscale30}"
                    BorderThickness="1"
                    Header="{l:Loc Qlik.Sense.Resources:Translate_common:Common_Clear}" />
            </ContextMenu>

            <DataTemplate x:Key="ItemTemplateStackPanel">
                <controls:HubAppDataView
                    Margin="10,10,0,0"
                    dd:DragDrop.IsDragSource="False"
                    ContextMenu="{StaticResource deleteMenu}"
                    DataContext="{Binding}"
                    Foreground="{StaticResource LUI.Brush.Grayscale30}" />
            </DataTemplate>

            <converter:BindingDiagConverter x:Key="BindingDiagConverter" />

            <hub:AppDataFilter x:Key="AppDataFilter" />
            <hub:AppNameComparer x:Key="AppNameComparer" />
            <hub:AppPublishedComparer x:Key="AppPublishedComparer" />
            <hub:AppCreatedComparer x:Key="AppCreatedComparer" />

            <converter:BooleanToVisibilityConverter
                x:Key="trueToVisibilityCollapsedConverter"
                FalseValue="Visible"
                TrueValue="Collapsed" />
            <converter:BooleanToVisibilityConverter
                x:Key="trueToVisibilityVisibleConverter"
                FalseValue="Collapsed"
                TrueValue="Visible" />


        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="{StaticResource LUI.Brush.Grayscale100}">
        <TextBlock Foreground="{StaticResource LUI.Brush.ORANGE}">Hallo Welt</TextBlock>
        <!--<Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel LastChildFill="False">
            <TextBlock
                VerticalAlignment="Center"
                DockPanel.Dock="Left"
                Foreground="{StaticResource LUI.Brush.Grayscale30}"
                Text="{l:Loc Translate_common:Common_Bookmarks}" />
            <Luicontrols:LuiButton
                Margin="10,0,0,0"
                Click="LuiButton_Click"
                Content="{l:Loc Bookmarks_Add}"
                DockPanel.Dock="Right" />
            <Luicontrols:LuiSearch
                Name="search"
                Width="150"
                DockPanel.Dock="Right"
                HintText="{l:Loc Translate_common:Common_Search}" />
        </DockPanel>
        <Luicontrols:CollectionView
            Name="collectionview"
            CollectionViewFilter="{StaticResource BookmarkDataFilter}"
            FilterText="{Binding SearchText, ElementName=search}"
            ItemsSource="{Binding Path=.}" />
        <ScrollViewer
            Name="itemscontrolcrollviewer"
            Grid.Row="1"
            ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox
                Name="li"
                Grid.Row="1"
                ItemsSource="{Binding ProcessedCollection, ElementName=collectionview}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <controls:BookmarkDataView />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>

                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
            <ScrollViewer.Style>
                <Style
                    BasedOn="{StaticResource LUI_SenseScrollViewerStyle}"
                    TargetType="ScrollViewer">
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding ShowDetail, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppArea}}"
                            Value="false">
                            <Setter Property="Grid.RowSpan" Value="2" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ScrollViewer.Style>
        </ScrollViewer>
        <Grid
            Grid.Row="2"
            Visibility="{Binding ShowDetail, Converter={StaticResource trueToVisibilityVisibleConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppArea}}">
            <Grid.RowDefinitions>

                <RowDefinition Height="10*" />
                <RowDefinition Height="70*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Background="{StaticResource LUI.Brush.Grayscale95}"
                BorderBrush="{StaticResource LUI.Brush.Grayscale80}"
                BorderThickness="1">
                <DockPanel Background="{StaticResource LUI.Brush.Grayscale95}">
                    <Luicontrols:LuiButton
                        Margin="10,0,0,0"
                        LuiAttached:ThemeProperties.IconLeft="lui_icon_edit"
                        Click="EditButton_Click"
                        FontSize="16"
                        Visibility="{Binding IsEditMode, Converter={StaticResource trueToVisibilityCollapsedConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppArea}}" />
                    <Luicontrols:LuiButton
                        Margin="10,0,0,0"
                        LuiAttached:ThemeProperties.IconLeft="lui_icon_bin"
                        Click="DeleteButton_Click"
                        FontSize="16"
                        Visibility="{Binding IsEditMode, Converter={StaticResource trueToVisibilityCollapsedConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppArea}}" />
                    <Luicontrols:LuiButton
                        Width="40"
                        Height="28"
                        Margin="5,0,0,0"
                        HorizontalContentAlignment="Center"
                        LuiAttached:ThemeProperties.ButtonScheme="Error"
                        LuiAttached:ThemeProperties.IconLeft="lui_icon_cross"
                        Click="CancelButton_Click"
                        FontSize="16"
                        FontWeight="Normal"
                        Foreground="{StaticResource LUI.Brush.Grayscale100}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource trueToVisibilityVisibleConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppArea}}" />
                    <Luicontrols:LuiButton
                        Width="40"
                        Height="28"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Center"
                        LuiAttached:ThemeProperties.ButtonScheme="Success"
                        LuiAttached:ThemeProperties.IconLeft="lui_icon_tick"
                        Click="SaveButton_Click"
                        FontSize="16"
                        FontWeight="Normal"
                        Foreground="{StaticResource LUI.Brush.Grayscale100}"
                        Visibility="{Binding IsEditMode, Converter={StaticResource trueToVisibilityVisibleConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppArea}}" />

                    <Luicontrols:LuiButton
                        LuiAttached:ThemeProperties.BorderThickness="0"
                        LuiAttached:ThemeProperties.IconLeft="lui_icon_cross"
                        Background="{StaticResource LUI.Brush.Grayscale95}"
                        Click="CloseButton_Click"
                        DockPanel.Dock="Right" />

                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="{StaticResource QlikViewSans}"
                        FontWeight="Normal"
                        Foreground="{StaticResource LUI.Brush.Grayscale30}"
                        Text="{Binding SelectedApp.AppName, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppArea}}" />


                </DockPanel>
            </Border>
            <Border
                Grid.Row="2"
                VerticalAlignment="Stretch"
                Background="{StaticResource LUI.Brush.Grayscale35}"
                BorderBrush="{StaticResource LUI.Brush.Grayscale80}"
                BorderThickness="1">
                <controls:BookmarkDataView
                    x:Name="AppView"
                    Margin="20,20,0,0"
                    VerticalAlignment="Top"
                    Background="{StaticResource LUI.Brush.Grayscale35}"
                    DataContext="{Binding SelectedApp, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppArea}}"
                    Foreground="{StaticResource LUI.Brush.Grayscale100}"
                    IsEditMode="{Binding IsEditMode, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppArea}}" />
            </Border>
        </Grid>-->
    </Grid>
</UserControl>
