    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <LuiControls:LuiToggleButton
            x:Name="togglebutton"
            Margin="5,10,5,0"
            LuiAttached:ThemeProperties.IconRight="lui_icon_triangle_bottom"
            Content="Spalte hinzufügen" />
        <LuiControls:LuiDialog
            x:Name="dialog"
            IsOpen="{Binding IsChecked, ElementName=togglebutton}"
            PanelHeight="120"
            PanelWidth="120"
            Placement="Bottom"
            PlacementTarget="{Binding ElementName=togglebutton}"
            PopupClosed="dialog_PopupClosed">
            <ContentControl Content="{Binding PopupContent}" />
        </LuiControls:LuiDialog>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <TextBlock
                    Margin="10,5,0,0"
                    FontFamily="{StaticResource QlikViewSans}"
                    FontSize="12"
                    FontWeight="Bold"
                    Foreground="{StaticResource LUI.Brush.Grayscale30}"
                    Text="Spalten" />
                <LuiControls:LuiSeparator Height="3" />


                <LuiControls:LuiAccordion
                    x:Name="acc"
                    ItemContainerStyle="{StaticResource LUI_ColumnOrderAccordionItemStyle}"
                    ItemsSource="{Binding Columns}" />
