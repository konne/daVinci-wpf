<UserControl
    x:Class="daVinci.Controls.HubAppDataView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:LuiAttached="clr-namespace:leonardo.AttachedProperties;assembly=leonardo-wpf"
    xmlns:Luicontrols="clr-namespace:leonardo.Controls;assembly=leonardo-wpf"
    xmlns:controls="clr-namespace:daVinci.Controls"
    xmlns:converter="clr-namespace:leonardo.Converter;assembly=leonardo-wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:l="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    l:LocalizeDictionary.DesignCulture="de"
    l:ResxLocalizationProvider.DefaultAssembly="Qlik.Sense.Resources"
    l:ResxLocalizationProvider.DefaultDictionary="Translate_client"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/leonardo-wpf;component/Styles/LUIStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converter:BooleanToVisibilityConverter
                x:Key="trueToVisibilityCollapsedConverter"
                FalseValue="Visible"
                TrueValue="Collapsed" />
            <converter:BooleanToVisibilityConverter
                x:Key="trueToVisibilityVisibleConverter"
                FalseValue="Collapsed"
                TrueValue="Visible" />

        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel
        Width="800"
        Margin="20,0,0,0"
        HorizontalAlignment="Left"
        Orientation="Horizontal">
        <Image
            Width="140"
            Height="150"
            VerticalAlignment="Top"
            Source="{Binding AppImage}"
            Stretch="Fill" />
        <StackPanel
            Margin="10,0,0,0"
            Visibility="{Binding IsEditMode, Converter={StaticResource trueToVisibilityCollapsedConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppDataView}}">
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="{StaticResource QlikViewSans}"
                FontWeight="Bold"
                Foreground="{StaticResource LUI.Brush.Grayscale30}"
                Text="{Binding AppName}" />
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource QlikViewSans}"
                    FontSize="12"
                    FontStyle="Italic"
                    FontWeight="Normal"
                    Foreground="{StaticResource LUI.Brush.Grayscale50}"
                    Text="{l:Loc AppDetails_FileName}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource QlikViewSans}"
                    FontSize="12"
                    FontStyle="Italic"
                    FontWeight="Normal"
                    Foreground="{StaticResource LUI.Brush.Grayscale50}"
                    Text="C:\Folder\Filename.qvf" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource QlikViewSans}"
                    FontSize="12"
                    FontStyle="Italic"
                    FontWeight="Normal"
                    Foreground="{StaticResource LUI.Brush.Grayscale50}"
                    Text="{l:Loc Toolbar_DataLastLoaded}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource QlikViewSans}"
                    FontSize="12"
                    FontStyle="Italic"
                    FontWeight="Normal"
                    Foreground="{StaticResource LUI.Brush.Grayscale50}"
                    Text="{Binding DataLastLoaded, StringFormat=D, ConverterCulture=de-DE}" />
            </StackPanel>
            <TextBlock
                Width="650"
                Margin="0,20,0,0"
                VerticalAlignment="Center"
                FontFamily="{StaticResource QlikViewSans}"
                FontWeight="Normal"
                Foreground="{StaticResource LUI.Brush.Grayscale30}"
                Text="{Binding AppDescription}"
                TextWrapping="Wrap" />
        </StackPanel>
        <StackPanel
            Height="250"
            Margin="10,0,0,0"
            VerticalAlignment="Top"
            Visibility="{Binding IsEditMode, Converter={StaticResource trueToVisibilityVisibleConverter}, RelativeSource={RelativeSource FindAncestor, AncestorType=controls:HubAppDataView}}">
            <Luicontrols:LuiInput
                Width="500"
                LabelText="{l:Loc Translate_common:Common_Title}"
                Text="{Binding AppName}" />

            <Luicontrols:LuiInput
                Width="500"
                Height="200"
                VerticalAlignment="Stretch"
                AcceptsReturn="True"
                LabelText="{l:Loc Translate_common:Common_Description}"
                Text="{Binding AppDescription}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />
        </StackPanel>

    </StackPanel>
</UserControl>
