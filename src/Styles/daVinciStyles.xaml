        <StackPanel>
            <Border Height="40">
                <StackPanel
                    Orientation="Horizontal"
                    Style="{StaticResource StackanelMouseOverStyle}">
                    <StackPanel.InputBindings>
                        <MouseBinding
                            Command="{Binding ItemSelectedCommand}"
                            CommandParameter="{Binding}"
                            MouseAction="LeftClick" />
                    </StackPanel.InputBindings>
                    <controls:LuiIcon
                        VerticalAlignment="Center"
